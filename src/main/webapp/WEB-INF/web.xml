<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Gestion Productos Agricolas Web</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file> 
        </welcome-file-list>

    <!-- 
        Configuración del Servlet (opcional si se usa @WebServlet en la clase del Servlet)
        Si ProductoAgricolaServlet.java tiene la anotación @WebServlet("/productos"),
        esta sección no es estrictamente necesaria. Sin embargo, es bueno conocerla.
    
    <servlet>
        <servlet-name>ProductoAgricolaServlet</servlet-name>
        <servlet-class>com.gpaweb.controller.ProductoAgricolaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductoAgricolaServlet</servlet-name>
        <url-pattern>/productos</url-pattern> 
    </servlet-mapping>
    -->

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error/404.jsp</location> </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error/errorGeneral.jsp</location> </error-page>
    
</web-app> 